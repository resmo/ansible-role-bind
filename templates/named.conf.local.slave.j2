## {{ ansible_managed }}
{% for slave_zone in bind_config_slave_zones %}
######## {{ slave_zone.name }} ({{ slave_zone.zones|count }} zones)
{% for zone in slave_zone.zones %}
zone "{{ zone }}" {
    type slave;
    file "{{bind_base_zones_path}}/slaves/db.{{ zone }}";
    masters {
{% for master in slave_zone.masters %}
          {{ master }};
{% endfor %}
    };
};
{% endfor %}
{% endfor %}
